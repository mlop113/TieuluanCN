<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splashscreen1"
    android:gravity="center"
    tools:context="com.study.teamspkt.worldnews.SplashScreenActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:background="@color/splashscreen_bgtext"
        android:orientation="horizontal">

        <com.study.teamspkt.worldnews.Typewriter
            android:id="@+id/TypewriterAppname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:textColor="@color/splashscreen_text"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
